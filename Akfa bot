import telebotfrom telebot import typesTOKEN = '7441860336:AAHNVHWKKt7aDmB6zAVS06jppU43KygTS4o'ADMIN_ID = 6819681295  # O‘zingizning Telegram ID'ingizni shu yerga yozingbot = telebot.TeleBot(TOKEN)# --------------------- START ---------------------@bot.message_handler(commands=['start'])def welcome(message):    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)    btn1 = types.KeyboardButton("Eshik hisoblash")    btn2 = types.KeyboardButton("Rom hisoblash")    markup.add(btn1, btn2)        if message.from_user.id == ADMIN_ID:        btn3 = types.KeyboardButton("Admin Panel")        markup.add(btn3)    bot.send_message(message.chat.id, "Salom! Nima hisoblaymiz?", reply_markup=markup)# --------------------- MENYU TANLASH ---------------------@bot.message_handler(func=lambda message: message.text == "Eshik hisoblash")def ask_door_size(message):    bot.send_message(message.chat.id, "Eshik uchun o‘lchamni kiriting (masalan: 100x220)")@bot.message_handler(func=lambda message: message.text == "Rom hisoblash")def ask_window_size(message):    bot.send_message(message.chat.id, "Rom uchun o‘lchamni kiriting (masalan: 120x150)")# --------------------- ADMIN PANEL ---------------------@bot.message_handler(func=lambda message: message.text == "Admin Panel" and message.from_user.id == ADMIN_ID)def admin_panel(message):    bot.send_message(message.chat.id, "Xush kelibsiz, Admin!\nBu yerda siz menyuni tahrirlashingiz mumkin (kelajakda).")# --------------------- RAZMER HISOBLASH ---------------------def hisobla_razmer(text):    try:        parts = text.lower().replace(" ", "").split("x")        if len(parts) != 2:            return None        width = int(parts[0])        height = int(parts[1])        # Har 1 m² uchun 100 000 so‘m deb faraz qilamiz        area = (width / 100) * (height / 100)        narx = area * 100000        return round(narx, 2)    except:        return None@bot.message_handler(func=lambda message: True)def universal_handler(message):    if message.text.lower().endswith('x') or 'x' in message.text:        narx = hisobla_razmer(message.text)        if narx:            bot.send_message(message.chat.id, f"Hisoblangan narx: {narx} so‘m")            return        # Agar boshqa oddiy so‘zlar bo‘lsa:    if message.from_user.id == ADMIN_ID:        bot.send_message(message.chat.id, f"Siz adminsiz. Xabar: {message.text}")    else:        bot.send_message(message.chat.id, f"Siz yubordingiz: {message.text}")bot.polling()
